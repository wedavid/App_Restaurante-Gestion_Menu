<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".Admin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_margin="30dp"
        android:orientation="vertical"
        android:layout_gravity="center">

        <Button
            android:id="@+id/bt_con_usuarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consultar Cantidad de usuarios"
            android:drawablePadding="10dp"
            android:layout_marginTop="35dp"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="180dp" />

        <Button
            android:id="@+id/btn_mesas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear mesas y sillas "
            android:drawablePadding="10dp"
            android:layout_marginTop="20dp"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="260dp" />

        <Button
            android:id="@+id/btn_productos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Crear Platos "
            android:drawablePadding="10dp"
            android:layout_marginTop="20dp"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="260dp" />

        <Button
            android:id="@+id/btn_crear_admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="10dp"
            android:layout_marginTop="20dp"
            android:text="Crear Empleado"
            tools:layout_editor_absoluteX="157dp"
            tools:layout_editor_absoluteY="341dp" />

    </LinearLayout>


</LinearLayout>